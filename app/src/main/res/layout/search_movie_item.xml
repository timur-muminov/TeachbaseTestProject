<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_image"
        android:layout_width="63dp"
        android:layout_height="94dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_corners_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder_movie" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:maxLines="2"
        android:textColor="@color/main_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/movie_image"
        app:layout_constraintTop_toTopOf="@+id/movie_image"
        tools:text="Hot Wheels" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_second_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:maxLines="2"
        android:textColor="@color/main_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/movie_name_textview"
        app:layout_constraintStart_toStartOf="@+id/movie_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/movie_name_textview"
        tools:text="Team Hot Wheels" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_genre_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:maxLines="1"
        android:textColor="@color/gray_5"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/movie_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/movie_second_name_textview"
        tools:text="мультфильм, детский" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_rate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/green_1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/movie_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/movie_genre_textview"
        tools:text="9.3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_votes_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/gray_5"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/movie_rate_textview"
        app:layout_constraintStart_toEndOf="@+id/movie_rate_textview"
        tools:text="9678" />


</androidx.constraintlayout.widget.ConstraintLayout>